---
import AuthLayout from '@/components/layouts/AuthLayout.astro';
import LoginForm from '@/components/features/auth/LoginForm';
---

<AuthLayout title="Iniciar Sesión">
  <div class="w-full max-w-md">
    <div class="text-center mb-8">
      <h1 class="text-2xl font-semibold tracking-tight">Centro Medico Del Valle</h1>
      <p class="text-sm text-muted-foreground mt-2">Inicia sesión en tu cuenta</p>
    </div>

    <LoginForm client:load />
  </div>
</AuthLayout>
